@model TaskApiCdek.ViewModels.IndexViewModel

<h1>Оформление заказа</h1>
<form asp-action="Index" asp-controller="Home" method="post">
    <div>
        <label asp-for="Weight"></label><br />
        <input asp-for="Weight" />
        <span asp-validation-for="Weight"></span>
    </div>
    <div>
        <label asp-for="Length"></label><br />
        <input asp-for="Length" />
        <span asp-validation-for="Length"></span>
    </div>
    <div>
        <label asp-for="Width"></label><br />
        <input asp-for="Width" />
        <span asp-validation-for="Width"></span>
    </div>
    <div>
        <label asp-for="Height"></label><br />
        <input asp-for="Height" />
        <span asp-validation-for="Height"></span>
    </div>
    <div>
        <label asp-for="FiasFrom"></label><br />
        <input asp-for="FiasFrom" />
        <span asp-validation-for="FiasFrom"></span>
    </div>
    <div>
        <label asp-for="FiasTo"></label><br />
        <input asp-for="FiasTo" />
        <span asp-validation-for="FiasTo"></span>
    </div>
    <div>
        <input type="submit" value="Рассчитать стоимость заказа" />
    </div>
</form>

<p>Стоимость заказа: @ViewData["cost"]</p>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>